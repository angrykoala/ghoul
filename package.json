{
  "name": "wendigo",
  "version": "2.1.3",
  "description": "A proper monster for front-end automated testing",
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "injection_scripts",
    "dist"
  ],
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "test": "npm run tsc && mocha ./tests/**/*.test.js ./tests/hooks.js --exit --bail",
    "dummy-server": "node tests/dummy_server/index.js",
    "eslint": "eslint . --ext .js",
    "markdown-lint": "markdownlint -c .markdownlint.json ./*.md",
    "tsc": "rm -rf dist && tsc",
    "prepublishOnly": "npm run eslint && npm run markdown-lint && npm test",
    "tslint": "tslint *.ts lib/*.ts lib/*/*.ts lib/*/*/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/angrykoala/wendigo.git"
  },
  "keywords": [
    "headless",
    "test",
    "frontend",
    "browser",
    "automation",
    "chrome",
    "chromium"
  ],
  "author": "angrykoala <angrykoala@outlook.es>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/angrykoala/wendigo/issues"
  },
  "homepage": "https://github.com/angrykoala/wendigo#readme",
  "dependencies": {
    "compositer": "^1.3.4",
    "is-class": "0.0.7",
    "puppeteer": "~1.14.0",
    "@types/puppeteer": "^1.12.4"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.8",
    "eslint": "^5.16.0",
    "express": "^4.17.1",
    "markdownlint-cli": "^0.17.0",
    "mocha": "^6.1.4",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  }
}
